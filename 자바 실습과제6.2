import java.util.*;

public class Fee {

  public double start=0;
  public double end=0;
  Scanner scan = new Scanner(System.in);

  public void prin() {
    
    System.out.println("들어온 시간은? :");
    
    this.start = scan.nextDouble();

    System.out.println("나간 시간은? :");

    this.end = scan.nextDouble();

  }
  public int cal() {

    int fee=0;
    int time=0;
    double diff = end - start;

    time = (int)(diff*60);

    int hour = time / 60;

    if(time % 60 > 0)
      fee += 1000;

    fee += hour*500;

    if(fee>10000)
      fee = 10000;

      return fee;
  }
